<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopList.MainPage">

    <ScrollView BackgroundColor="Beige">

        
            <Label Text="Shop List" TextColor="Brown" HorizontalTextAlignment="Center"></Label>



        <CollectionView ItemsSource="{Binding Produkty}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="10">
                        
                        <Label Text="{Binding Nazwa}" FontSize="20" VerticalOptions="Center"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Entry Placeholder="Add to the list" TextColor="SandyBrown" BackgroundColor="SaddleBrown" x:Name="ItemEntry"></Entry>
   
    <Button Text="Add" Clicked="OnAddClicked" BackgroundColor="Brown" TextColor="White"/>

        </ScrollView>
        
</ContentPage>
