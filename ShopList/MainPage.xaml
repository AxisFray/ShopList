<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopList.MainPage">

    <Grid RowDefinitions="*,Auto,Auto" BackgroundColor="WhiteSmoke">
        <ScrollView>
        <!-- Nagłówek i lista -->
        <VerticalStackLayout Grid.Row="0">
            <Label Text="Shop List" TextColor="Black" FontFamily="fantasy" FontSize="30" HorizontalTextAlignment="Center" />

            <CollectionView ItemsSource="{Binding Produkty}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                            <Grid>
                                <Grid.BackgroundColor>
                                    <Binding Path="IsDone">
                                        <Binding Converter="{Binding IsDoneToColorConverter}" />

                                    </Binding>
                                </Grid.BackgroundColor>
                                <StackLayout Orientation="Horizontal" Padding="10">
                            <Border BackgroundColor="LightGray" HeightRequest="50" WidthRequest="350">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="17" />
                                        </Border.StrokeShape>
                                        <Label Text="{Binding Nazwa}" FontSize="20" FontFamily="fantasy"  Margin="1" BackgroundColor="LightGray" Padding="3" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" HeightRequest="45" WidthRequest="335" VerticalOptions="Center" TextDecorations="{Binding IsDone, Converter={StaticResource BoolToTextDecorationConverter}}">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnLabelTapped"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                </Border>
                            <Border BackgroundColor="LightGray" HeightRequest="50" WidthRequest="50" >
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="17" />
                                        </Border.StrokeShape>
                                        <Button Text="OK" FontSize="10" Clicked="Done" BackgroundColor="LightGray" TextColor="Black" HeightRequest="30" WidthRequest="30"/>
                            </Border>
                        </StackLayout>
                            </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
        </ScrollView>
        <!-- Przycisk dodawania -->
        <Button Grid.Row="1" Text="Add new shop item" Clicked="OnAddClicked" BackgroundColor="Gray" Margin="30" FontSize="15" FontFamily="fantasy" TextColor="White"/>

        <!-- Entry na dole -->
        <Entry Grid.Row="2" Placeholder="Add to the list" TextColor="Grey" BackgroundColor="DimGrey" x:Name="ItemEntry" Margin="0"/>
    </Grid>
</ContentPage>
