<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopList.MainPage">

    <StackLayout BackgroundColor="WhiteSmoke" >

        
            <Label Text="Shop List" TextColor="Black" FontFamily="fantasy" FontSize="30" HorizontalTextAlignment="Center"></Label>



        <CollectionView ItemsSource="{Binding Produkty}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="10">
                        <Frame BackgroundColor="LightGray" HeightRequest="50" WidthRequest="350" CornerRadius="17">
                        <Label Text="{Binding Nazwa}" FontSize="20"  FontFamily="fantasy"   Margin="1" BackgroundColor="LightGray" Padding="3" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" HeightRequest="45" WidthRequest="335" VerticalOptions="Center"/>
                        </Frame>
                        <Frame BackgroundColor="LightGray" HeightRequest="50" WidthRequest="50" CornerRadius="17">
                        <Button Text="OK" FontSize="10" Clicked="Done" BackgroundColor="LightGray" TextColor="Black" HeightRequest="30" WidthRequest="30" ></Button>
                        </Frame>
                        
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


        <Button Text="Add new shop item" Clicked="OnAddClicked" BackgroundColor="Gray" Margin="30" FontSize="15" FontFamily="fantasy" TextColor="White"/>
        <Entry Placeholder="Add to the list" TextColor="Grey"  BackgroundColor="DimGrey" x:Name="ItemEntry"></Entry>
    </StackLayout>
        
</ContentPage>
